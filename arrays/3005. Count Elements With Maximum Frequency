class Solution {
public:
    int maxFrequencyElements(vector<int>& nums) {
        vector <int> freq (105,0);
        for(int i=0;i<nums.size();i++) freq[nums[i]]++;
        auto it=max_element(freq.begin(),freq.end());
        int ans=0;
        for(int i=0;i<105;i++){
            if(freq[i]==*it) ans+=*it;
        }
        return ans;
    }
};
